.ORIG x3000
        LD  R3, NUM
        LDR R0, R3, #0
        LDR R1, R3, #1
        AND R2, R2, #0
        NOT R4, R1
        ADD R4, R4, #1
TOP     ADD R0, R0, R4
        BRn DONE
        ADD R2, R2, #1
        BR TOP
DONE    ADD R0, R0, R1
        STR R2, R3, #0
        STR R0, R3, #1
        HALT
NUM    .FILL x4000
       .END